<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.unioeste.riscvirtualmachine.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="RISC-V Virtual Machine">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <HBox fx:id="header" alignment="CENTER" layoutX="30.0" layoutY="65.0" prefHeight="0.0" spacing="20.0">
      <children>
         <HBox fx:id="header1" alignment="CENTER" prefHeight="0.0" spacing="5.0" HBox.hgrow="NEVER">
            <children>
               <Button fx:id="fileChooserBtn" mnemonicParsing="false" text="Load" />
               <Label fx:id="fileLabel" text="No file" textFill="#00000087" />
            </children>
         </HBox>
         <Region maxWidth="540.0" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         <HBox fx:id="header11" alignment="CENTER" layoutX="77.0" layoutY="10.0" prefHeight="0.0" spacing="5.0">
            <children>
               <Button fx:id="startBtn" disable="true" mnemonicParsing="false" text="Start" />
               <Button fx:id="nextBtn" disable="true" mnemonicParsing="false" text="Next" />
            </children>
         </HBox>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
   </HBox>
   <HBox fx:id="flagContainer" alignment="CENTER" prefHeight="0.0" spacing="20.0">
      <VBox.margin>
         <Insets bottom="30.0" top="10.0" />
      </VBox.margin>
   </HBox>
   <HBox alignment="CENTER" spacing="20.0">
      <children>
         <ScrollPane>
            <content>
               <TableView editable="true">
                 <columns>
                   <TableColumn prefWidth="100.0" text="Address" />
                   <TableColumn fx:id="memTable" editable="false" prefWidth="300.0" sortable="false" text="Value" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
            </content>
         </ScrollPane>
         <HBox alignment="CENTER">
            <children>
               <VBox fx:id="registerContainer2" prefHeight="200.0" prefWidth="100.0" spacing="5.0" />
               <VBox fx:id="registerContainer1" prefHeight="200.0" prefWidth="100.0" spacing="5.0" />
            </children>
         </HBox>
      </children></HBox>
</VBox>
